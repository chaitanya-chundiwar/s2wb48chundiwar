extends layout

block content
  h1= title
  p Welcome to #{title}
  p I am chaitanyakrishna Hanumantarao Chundiwar
  - var btnType = 'info'
  - var btnSize = 'lg'
  button(type='button' class=`btn btn-${btnType} btn-${btnSize}` onclick="moreClaps()") Press Me

  div(id ='target') Clap for me 

  script.
    var clap_count = 0;
    function moreClaps(){
      clap_count += 2;
      document.getElementById('target').innerHTML = `Clap ${clap_count} times.`;
    }